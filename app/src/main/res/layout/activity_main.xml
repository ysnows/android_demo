<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />


        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="change" />

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jump to activity2" />

        <Button
            android:id="@+id/btn_jump_view_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jump to activity_view_draw" />

        <Button
            android:id="@+id/btn_jump_view_draw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jump to activity_view_draw_recyclerview" />

        <Button
            android:id="@+id/btn_jump_view_draw3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jump to activity_view_draw_viewpager" />

        <Button
            android:id="@+id/btn_jump_view_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jump to activity_view_scroller" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
